<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">?attr/theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">?attr/theme_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">?attr/commonBackgroundColor</item>
        <item name="theme_color">@color/md_grey_500</item>
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="listview_pic_bg">@color/gainsboro</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="MainActivityTheme" parent="DayTheme">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="CommonGalleryTheme" parent="DayTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="My.Widget.Holo.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_gray</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item>
        <item name="android:backgroundSplit">@color/action_gray</item>
    </style>

    <style name="My.Widget.Holo.Dark.ActionBar" parent="@style/My.Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_action_gray</item>
        <item name="android:backgroundSplit">@color/dark_action_gray</item>
    </style>

    <style name="My.Widget.Holo.Light.ActionBar.Gradient" parent="@style/My.Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/action_gradient</item>
    </style>

    <style name="GalleryTheme" parent="@style/CommonGalleryTheme">
        <item name="android:actionBarStyle">@style/My.Widget.Holo.Light.ActionBar.Gradient</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/stay</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="listViewMultiImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:src">@drawable/timeline_image_loading</item>
    </style>

    <style name="editBarStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DayTheme" parent="AppTheme">>
        <item name="commonBackgroundColor">@color/light_gray</item>
        <item name="writeBackgroundColor">@color/snow</item>
        <item name="writeEditerBackgroundColor">@color/white</item>
        <item name="weibodetailBackgroundColor">@color/white</item>
        <item name="weibodetailAdapterBackgroundColor">@color/light_gray</item>
        <item name="commonCardBackgroundColor">@color/white</item>
        <item name="commonImageBackground">@color/gainsboro</item>
        <item name="actionbarColor">?attr/colorPrimary</item>
        <item name="accountTextColor">@color/white</item>
        <item name="textColor">@color/primaryText</item>
        <item name="writeTextColor">@color/primaryText</item>
        <item name="weibodetailCommentTextColor">@color/white</item>
        <item name="weibodetailCommentBackground">?attr/theme_color</item>
        <item name="secondTextColor">@color/secondaryText</item>
        <item name="accountBackgroundColor">?attr/theme_color</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>
    <style name="NightTheme" parent="AppTheme">
        <item name="commonBackgroundColor">@color/listview_pic_background_dark</item>
        <item name="writeBackgroundColor">@color/listview_pic_background_dark</item>
        <item name="writeEditerBackgroundColor">@color/gray</item>
        <item name="commonCardBackgroundColor">@color/dark_gray</item>
        <item name="weibodetailBackgroundColor">@color/listview_pic_background_dark</item>
        <item name="weibodetailAdapterBackgroundColor">@color/listview_pic_background_dark</item>
        <item name="commonImageBackground">@color/listview_pic_background_dark</item>
        <item name="actionbarColor">@color/listview_pic_background_dark</item>
        <item name="accountTextColor">@color/gray</item>
        <item name="textColor">@color/gray</item>
        <item name="writeTextColor">@color/primaryText</item>
        <item name="weibodetailCommentBackground">@color/listview_pic_background_dark</item>
        <item name="weibodetailCommentTextColor">@color/gray</item>
        <item name="secondTextColor">@color/secondaryText</item>
        <item name="accountBackgroundColor">@color/listview_pic_background_dark</item>
        <item name="dividerColor">@color/gray</item>
    </style>

</resources>
