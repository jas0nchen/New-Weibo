<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/weibodetailBackgroundColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weibodetail_repost_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center|bottom"
            android:padding="10dp"
            android:text="@string/weibo_detail_repost"
            android:textColor="?attr/textColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weibodetail_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center|bottom"
            android:padding="10dp"
            android:text="@string/weibo_detail_comment"
            android:textColor="?attr/textColor"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>