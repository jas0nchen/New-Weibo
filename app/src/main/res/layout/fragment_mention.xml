<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jasonchen.microlang.view.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/theme_color"></com.jasonchen.microlang.view.SlidingTabLayout>

    <View
        android:id="@+id/action_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/action_shadow"/>

    <com.jasonchen.microlang.gallery.ViewPagerFixed
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:id="@+id/mentions_pager"/>

</LinearLayout>
