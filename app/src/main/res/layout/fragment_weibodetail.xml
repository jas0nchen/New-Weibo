<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/weibodetailAdapterBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jasonchen.microlang.fragments.WeiboDetailFragment">

    <com.jasonchen.microlang.swiperefresh.LoadListView
        android:id="@+id/listView"
        android:dividerHeight="0.0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jasonchen.microlang.swiperefresh.LoadListView>

    <LinearLayout
        android:id="@+id/comment_repost_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/weibodetailCommentBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weibodetail_repost_count"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center|bottom"
                android:padding="10dp"
                android:text="@string/weibo_detail_repost"
                android:textColor="?attr/weibodetailCommentTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weibodetail_comment_count"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center|bottom"
                android:padding="10dp"
                android:text="@string/weibo_detail_comment"
                android:textColor="?attr/weibodetailCommentTextColor"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/action_shadow" />
    </LinearLayout>

</RelativeLayout>

